{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "hcw-stream-lib": [
        "./node_modules/hcw-stream-lib"
      ]
    },
    "baseUrl": "src",
    "downlevelIteration": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2022",
    "lib": [
      "es2017",
      "dom"
    ],
    "esModuleInterop": true,
    "useDefineForClassFields": false
  }
}
